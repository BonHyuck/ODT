<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000dp"
    android:layout_height="640dp"
    android:background="@color/btn_bg"
    tools:context=".OrderCheckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="#dddddd"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/orderCheckTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/text"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="950dp"
            android:layout_height="490dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="950dp"
                android:layout_height="52dp"
                android:background="@color/btn_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="950dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|top"
                    android:background="@color/bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderCheckMenuName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="36dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="TextView"
                        android:textColor="@color/text"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/orderCheckMenuCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="-72dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/text"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/orderCheckMenuPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/text"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/orderCheckListView"
                android:layout_width="950dp"
                android:layout_height="380dp"
                android:layout_marginTop="10dp">

            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/btn_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderTotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:background="@color/bg"
                    android:gravity="center"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/text"
                    android:textSize="32dp" />

                <TextView
                    android:id="@+id/orderCheckMenuTotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:background="@color/bg"
                    android:gravity="center"
                    android:text="TextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/text"
                    android:textSize="32dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1000dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/orderCheckCancelButton"
                android:layout_width="350dp"
                android:layout_height="54dp"
                android:layout_gravity="right"
                android:layout_marginLeft="75dp"

                android:background="@color/btn_bg"
                android:text="Button"
                android:textColor="@color/btn_text"
                android:textSize="24dp" />

            <Button
                android:id="@+id/orderCheckDoneButton"
                android:layout_width="350dp"
                android:layout_height="54dp"
                android:layout_gravity="left"
                android:layout_marginLeft="150dp"
                android:background="@color/btn_bg"
                android:text="Button"
                android:textColor="@color/btn_text"
                android:textSize="24dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>