<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000dp"
    android:layout_height="640dp"
    android:background="@color/btn_bg"
    tools:context=".MenuDetailActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/bg"
        android:layout_margin="4dp"
        >

        <LinearLayout
            android:layout_width="530dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/btn_bg"
            >

            <LinearLayout
                android:layout_width="526dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bg"
                >

                <ImageView
                    android:id="@+id/menuDetailImgView"
                    android:layout_width="520dp"
                    android:layout_height="450dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/menuDetailExp"
                    android:layout_width="423dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textColor="@color/text"
                    android:textSize="24dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menuDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/text"
                android:textSize="36dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/menuDetailMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"
                    android:background="@color/btn_bg"
                    android:text="-"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/menuDetailCount"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text"
                    android:textSize="32dp" />

                <Button
                    android:id="@+id/menuDetailPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:background="@color/btn_bg"
                    android:text="+"

                    android:textSize="30dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/menuDetailPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="128dp"
                android:layout_marginRight="32dp"
                android:text="TextView"
                android:textColor="@color/text"
                android:textSize="36dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/menuDetailCancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_01"
                    android:text="Button"
                    android:textColor="@color/btn_bg"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/menuDetailAddButton"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/btn_bg"
                    android:text="Button"
                    android:textColor="@color/btn_text"
                    android:textSize="24dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>