<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selector style for listrow -->
    <item
        android:state_pressed="true"
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1.5dp"
                android:color="@color/btn_bg" />

            <solid android:color="@color/btn_bg2" />
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1.5dp"
                android:color="@color/btn_bg" />

            <solid android:color="@color/btn_bg2" />
        </shape>
    </item>

    <item
        android:state_activated="true"
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1.5dp"
                android:color="@color/btn_bg" />

            <solid android:color="@color/btn_bg2" />
        </shape>
    </item>
    <item android:drawable="@color/bg" />
</selector>